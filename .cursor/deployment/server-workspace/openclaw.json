                "collectionName": "openclaw-mem0"
              }
            },
            "llm": {
              "provider": "openai",
              "config": {
                "model": "gpt-4o-mini",
                "baseURL": "http://localhost:8888/v1",
                "apiKey": "<OPENAI_API_KEY>"
              }
