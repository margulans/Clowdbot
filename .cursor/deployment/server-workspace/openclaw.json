{
  "meta": {
    "lastTouchedVersion": "2026.2.2-3",
    "lastTouchedAt": "2026-02-06T03:40:22.950Z"
  },
  "agents": {
    "defaults": {
      "model": {
        "primary": "openai/gpt-5.2",
        "fallbacks": ["anthropic/claude-sonnet-4-6"]
      },
      "memorySearch": {
        "sources": ["memory", "sessions"],
        "extraPaths": ["bank", "bank/entities"],
        "experimental": {
          "sessionMemory": true
        },
        "provider": "openai",
        "remote": {
          "apiKey": "<OPENAI_API_KEY>"
        },
        "model": "text-embedding-3-small",
        "query": {
          "hybrid": {
            "enabled": true,
            "vectorWeight": 0.7,
            "textWeight": 0.3
          }
        },
        "cache": {
          "enabled": true,
          "maxEntries": 50000
        }
      },
      "contextPruning": {
        "mode": "cache-ttl"
      },
      "compaction": {
        "memoryFlush": {
          "enabled": true
        }
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "models": {
        "google/gemini-2.5-flash": { "alias": "Gemini 2.5 Flash", "params": { "context1m": true } },
        "google/gemini-2.0-flash-lite": { "alias": "Gemini Flash Lite" },
        "openai/gpt-4o-mini": { "alias": "gpt-4o-mini" },
        "openai/gpt-4o": {},
        "openrouter/meta-llama/llama-3.3-70b-instruct:free": { "alias": "Llama 3.3 70B (free)" }
      }
    }
  },
  "tools": {
    "web": {
      "search": {
        "enabled": true,
        "provider": "perplexity",
        "apiKey": "<BRAVE_API_KEY>",
        "maxResults": 10,
        "cacheTtlMinutes": 30,
        "perplexity": {
          "apiKey": "<PERPLEXITY_API_KEY>",
          "model": "sonar"
        }
      }
    },
    "media": {
      "audio": {
        "enabled": true,
        "models": [
          {
            "provider": "groq",
            "model": "whisper-large-v3"
          }
        ]
      }
    }
  },
  "messages": {
    "ackReactionScope": "all",
    "removeAckAfterReply": true,
    "statusReactions": {
      "enabled": true,
      "timing": {
        "stallSoftMs": 20000,
        "stallHardMs": 60000
      }
    }
  },
  "commands": {
    "native": true,
    "nativeSkills": true,
    "text": true,
    "restart": true
  },
  "channels": {
    "telegram": {
      "capabilities": {
        "inlineButtons": "none"
      },
      "enabled": true,
      "dmPolicy": "allowlist",
      "botToken": "<TELEGRAM_BOT_TOKEN>",
      "groupPolicy": "allowlist",
      "streamMode": "partial",
      "reactionNotifications": "all",
      "reactionLevel": "ack",
      "allowFrom": ["685668909"],
      "customCommands": [
        {
          "command": "wendy",
          "description": "Венди — проактивный советник по целям и паттернам жизни"
        },
        {
          "command": "warren",
          "description": "Уоррен — принятие решений (от операционных до стратегических)"
        },
        { "command": "scout", "description": "Запустить разведку новых источников и авторов" }
      ]
    }
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "loopback",
    "auth": {
      "mode": "token",
      "token": "<GATEWAY_AUTH_TOKEN>"
    },
    "controlUi": {
      "root": "/home/openclaw/Clowdbot/dist/control-ui"
    }
  },
  "plugins": {
    "slots": {
      "memory": "openclaw-mem0"
    },
    "entries": {
      "telegram": {
        "enabled": true
      },
      "openclaw-mem0": {
        "enabled": true,
        "config": {
          "mode": "open-source",
          "userId": "margulan",
          "autoRecall": true,
          "autoCapture": true,
          "topK": 8,
          "searchThreshold": 0.42,
          "mmr": { "enabled": true, "lambda": 0.6 },
          "temporalDecay": { "enabled": true, "halfLifeDays": 45 },
          "oss": {
            "embedder": {
              "provider": "openai",
              "config": {
                "model": "text-embedding-3-small",
                "baseURL": "http://localhost:8888/v1",
                "apiKey": "<OPENAI_API_KEY>"
              }
            },
            "vectorStore": {
              "provider": "qdrant",
              "config": {
                "host": "localhost",
